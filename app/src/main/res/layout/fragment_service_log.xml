<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.wiipu.beautysalon_new_v2.Fragment.ServiceLogFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/ll_server_log_time"
            android:layout_width="fill_parent"
            android:layout_height="35dp"
            android:background="@color/background"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:clickable="true">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:contentDescription="@string/choose_date_check_order"
                android:src="@mipmap/ic_calendar" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="9dp"
                android:gravity="center_horizontal"
                android:singleLine="true"
                android:text="@string/choose_date_check_order"
                android:textColor="@color/text_color"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="188dp"
                android:contentDescription="@string/choose_date_check_order"
                android:src="@mipmap/ic_right_small0" />
        </LinearLayout>


        <ListView
            android:id="@+id/lv_service_log"
            android:layout_width="match_parent"
            android:background="@color/white"
            android:layout_height="wrap_content" >
        </ListView>

    </LinearLayout>

</FrameLayout>
